{
	// See https://go.microsoft.com/fwlink/?LinkId=759670
	// for the documentation about the jsconfig.json format
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"bower_components",
		"jspm_packages",
    "tmp",
    "temp",
		"build",
		"devbuild",
    "dist",
    "samples"
	]
}
